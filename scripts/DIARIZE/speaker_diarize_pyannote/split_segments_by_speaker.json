{
  "enviroment": "sync",
  "api": "huggingface",
  "script": "DIARIZE/speaker_diarize_pyannote/split_segments_by_speaker.py",
  "description": "A beszéd szegmenseket beszélőnként szétválasztja.",
  "required": [
    {
      "name": "project",
      "flags": [
        "-p",
        "--project"
      ],
      "type": "option",
      "default": null
    }
  ],
  "optional": [
    {
      "name": "hf_token",
      "flags": [
        "--hf-token"
      ],
      "type": "option",
      "default": null
    },
    {
      "name": "audio_exts",
      "flags": [
        "--audio-exts"
      ],
      "type": "option",
      "default": "wav,flac,mp3,m4a"
    },
    {
      "name": "min_chunk",
      "flags": [
        "--min-chunk"
      ],
      "type": "option",
      "default": 0.2
    },
    {
      "name": "round",
      "flags": [
        "--round"
      ],
      "type": "option",
      "default": 2
    },
    {
      "name": "add_speaker_field",
      "flags": [
        "--no-speaker-field"
      ],
      "type": "flag",
      "default": true
    },
    {
      "name": "backup",
      "flags": [
        "--no-backup"
      ],
      "type": "flag",
      "default": true
    },
    {
      "name": "dry_run",
      "flags": [
        "--dry-run"
      ],
      "type": "flag",
      "default": false
    },
    {
      "name": "min_word_overlap",
      "flags": [
        "--min-word-overlap"
      ],
      "type": "option",
      "default": 0.5
    },
    {
      "name": "inplace",
      "flags": [
        "--no-inplace"
      ],
      "type": "flag",
      "default": true
    },
    {
      "name": "output_suffix",
      "flags": [
        "--output-suffix"
      ],
      "type": "option",
      "default": "_split"
    },
    {
      "name": "debug",
      "flags": [
        "--debug"
      ],
      "type": "flag",
      "default": false
    }
  ]
}
