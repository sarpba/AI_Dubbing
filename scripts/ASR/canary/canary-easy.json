{
  "enviroment": "nemo",
  "script": "ASR/canary/canary-easy.py",
  "description": "A Canary ASR modell használata a beszéd szöveggé alakítására.",
  "required": [
    {
      "name": "project_name",
      "flags": [
        "-p",
        "--project-name"
      ],
      "type": "option",
      "default": null
    },
    {
      "name": "source_lang",
      "flags": [
        "--source-lang"
      ],
      "type": "option",
      "default": ""
    },
    {
      "name": "target_lang",
      "flags": [
        "--target-lang"
      ],
      "type": "option",
      "default": ""
    }
  ],
  "optional": [
    {
      "name": "model_name",
      "flags": [
        "--model-name"
      ],
      "type": "option",
      "default": "nvidia/canary-1b-v2"
    },
    {
      "name": "batch_size",
      "flags": [
        "--batch-size"
      ],
      "type": "option",
      "default": 4
    },
    {
      "name": "beam_size",
      "flags": [
        "--beam-size"
      ],
      "type": "option",
      "default": 5
    },
    {
      "name": "len_pen",
      "flags": [
        "--len-pen"
      ],
      "type": "option",
      "default": 1.0
    },
    {
      "name": "chunk",
      "flags": [
        "--chunk"
      ],
      "type": "option",
      "default": 30
    },
    {
      "name": "max_pause",
      "flags": [
        "--max-pause"
      ],
      "type": "option",
      "default": 0.6
    },
    {
      "name": "timestamp_padding",
      "flags": [
        "--timestamp-padding"
      ],
      "type": "option",
      "default": 0.2
    },
    {
      "name": "max_segment_duration",
      "flags": [
        "--max-segment-duration"
      ],
      "type": "option",
      "default": 11.5
    },
    {
      "name": "keep_alternatives",
      "flags": [
        "--keep-alternatives"
      ],
      "type": "option",
      "default": 2
    },
    {
      "name": "overwrite",
      "flags": [
        "--overwrite"
      ],
      "type": "flag",
      "default": false
    },
    {
      "name": "debug",
      "flags": [
        "--debug"
      ],
      "type": "flag",
      "default": false
    }
  ]
}
